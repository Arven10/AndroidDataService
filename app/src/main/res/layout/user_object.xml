<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number"
            android:paddingTop="@dimen/padding_below_divider_text_view"
            android:paddingLeft="@dimen/padding_below_divider_text_view" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/firstName"
            android:paddingBottom="@dimen/padding_below_divider_text_view"
            android:paddingLeft="@dimen/padding_below_divider_text_view"
            android:textSize="24sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/email"
            android:paddingBottom="@dimen/padding_below_divider_text_view"
            android:paddingLeft="@dimen/padding_below_divider_text_view"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/dividerTextView"
            android:background="@color/accent_material_dark" />

    </LinearLayout>
</LinearLayout>